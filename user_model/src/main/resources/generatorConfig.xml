<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>

    <!--这里填驱动的地址-->
    <classPathEntry location="E:\Myprojects\java_pro\2020\myshop\dao\src\main\lib\mysql-connector-java-5.1.32.jar"/>

    <!--这里将自动写的simple去掉-->
    <context id="context" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="false"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!--这里填写数据库连接信息-->
        <jdbcConnection userId="root" password="root" driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/tensquare_user?characterEncoding=utf-8"/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--这里填写实体类存放的地方-->
        <javaModelGenerator targetPackage="com.davina.user.pojo" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--这里填写接口存放的地方-->
        <sqlMapGenerator targetPackage="resources.com.davina.user.dao" targetProject="src/main">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!--这里填写接口对应的mapping文件存放的地方-->
        <javaClientGenerator targetPackage="com.davina.user.dao" type="XMLMAPPER" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!--这里填写数据库表和实体名字对应关系，注意domainObjectName是自己加的，还有几个不生成simple的属性要去掉-->
        <table tableName="tb_admin" domainObjectName="Admin" />
        <table tableName="tb_follow" domainObjectName="Follow" />
        <table tableName="tb_user" domainObjectName="User" />

    </context>
</generatorConfiguration>